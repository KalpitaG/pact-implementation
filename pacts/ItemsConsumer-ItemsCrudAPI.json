    {
      "description": "a request to list all items",
      "providerStates": [
        {
          "name": "items exist in the system"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/items"
      },
      "response": {
        "body": [
          {
            "id": 1,
            "name": "Laptop",
            "price": 299.99
          }
        ],
        "headers": {
          "Content-Type": "application/json"
        },
        "matchingRules": {
          "body": {
            "$": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type",
                  "min": 1
                }
              ]
            },
            "$[*].id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "integer"
                }
              ]
            },
            "$[*].name": {
              "combine": "AND",
