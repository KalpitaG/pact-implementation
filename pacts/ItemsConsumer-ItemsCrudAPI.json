    {
      "description": "a request to create a new item with only name",
      "providerStates": [
        {
          "name": "the system accepts items with only name provided"
        }
      ],
      "request": {
        "body": {
          "name": "Free Sample"
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "method": "POST",
        "path": "/items"
      },
      "response": {
        "body": {
          "id": 124,
          "name": "Free Sample",
          "price": 0
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "matchingRules": {
          "body": {
            "$.id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "integer"
                }
              ]
            },
            "$.name": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.price": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "decimal"
                }
              ]
            }
          },
          "header": {},
          "status": {}
        },
        "status": 201
      }
    },
